
<p id="notice"><%= notice %></p>

<div id='restaurants' class='column'>
  <div class='content-block-list'>
    <% @restaurants.each do |restaurant| %>
      <div class='content-block-list-row'>
        <div class='column medium-7'>
            
            <%= image_tag restaurant.image.thumb %>  
            <%= restaurant.name %>
            <%= restaurant.address %>
            <%= link_to 'Show', restaurant_path(restaurant) %>

            <% if user_signed_in?  %>
            <%= link_to 'Edit', edit_restaurant_path(restaurant) %>
            <%= link_to 'Destroy',restaurant_path(restaurant), method: :delete, data: { confirm: 'Are you sure?' } %>

            <% end %>

         </div> 
        </div>

      </div>
    <% end %>
  </div>  
</div>




